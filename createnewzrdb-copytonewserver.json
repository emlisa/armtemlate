{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "serverName": {
            "type": "string",
            "defaultValue": "testserver",
            "metadata": {
                "description": "The name of the SQL logical server for the database you would like to copy to. This will be the new test logical server that will be created."
            }
        },
        "databaseId": {
            "type": "string",
            "metadata": {
                "description": "The id for the database you would like to copy from."
            }
        },
        "copydbName": {
            "type": "string",
            "defaultValue": "testcopyzoneredundantdatabase",
            "metadata": {
                "description": "The name of the copy database."
            }
        },
        "location": {
            "type": "string",
            "defaultValue": "[resourceGroup().location]",
            "metadata": {
                "description": "Location for zone redundant copy database."
            }
        },
        "administratorLogin": {
            "type": "string",
            "metadata": {
                "description": "The administrator username of the SQL logical server."
            }
        },
        "administratorLoginPassword": {
            "type": "securestring",
            "metadata": {
                "description": "The administrator password of the SQL logical server."
            }
        }
    },
    "resources": [
        {
            "type": "Microsoft.Sql/servers",
            "apiVersion": "2020-02-02-preview",
            "name": "[parameters('serverName')]",
            "location": "[parameters('location')]",
            "properties": {
                "administratorLogin": "[parameters('administratorLogin')]",
                "administratorLoginPassword": "[parameters('administratorLoginPassword')]"
            },
            "resources": [
                {
                    "name": "[parameters('copydbName')]",
                    "type": "databases",
                    "apiVersion": "2020-11-01-preview",
                    "location": "[parameters('location')]",
                    "properties": {
                        "createMode": "Copy",
                        "sourceDatabaseId": "[parameters('databaseId')]",
                        "zoneRedundant": true,
			"requestedBackupStorageRedundancy": "Zone"
                    },
                    "dependsOn": [
                        "[resourceId('Microsoft.Sql/servers', concat(parameters('serverName')))]"
                    ]
                }
            ]
        }
    ]
}
